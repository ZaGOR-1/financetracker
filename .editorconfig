# EditorConfig is awesome: https://EditorConfig.org
root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# PHP files (Laravel PSR-12)
[*.php]
indent_size = 4

# JavaScript/TypeScript/Vue
[*.{js,jsx,ts,tsx,vue}]
indent_size = 4

# JSON, YAML, XML
[*.{json,yml,yaml,xml}]
indent_size = 2

# CSS, SCSS
[*.{css,scss,less}]
indent_size = 2

# Blade templates
[*.blade.php]
indent_size = 4

# Markdown (preserve trailing spaces for line breaks)
[*.md]
trim_trailing_whitespace = false

# Docker Compose (special case)
[docker-compose*.yml]
indent_size = 4

# Makefile (must use tabs)
[Makefile]
indent_style = tab

# Shell scripts
[*.sh]
end_of_line = lf
